platform :ios, '8.0'
use_frameworks!
install! 'cocoapods', :deterministic_uuids => false

def shared_pods
  pod 'youtube-ios-player-helper', :path => '../../youtube-ios-player-helper.podspec'
end

target 'youtube-player-ios-example' do
  shared_pods
end

target 'youtube-player-ios-exampleTests' do
  shared_pods
  pod 'OCMock', '3.1.2'
end
